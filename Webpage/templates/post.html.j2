{% extends 'base.html.j2' %}
{% block title %} {{ post.title }} {% endblock %}

{% block headsource %} <link rel="stylesheet" href="../static/post_style.css"> {% endblock %}

  
{% block navcontent %}
  {% if post.author_id == current_user.id %}
      <div class="auth-btns">
        <a href="/post/delete/{{ post.id }}" class="single-post-btn">Törlés</a>
        <a href="/post/edit/{{post.id}}" class="single-post-btn">Szerkesztés</a>
      </div>
  {% endif %}
{% endblock %}


{% block content %}
  {% if post.id is not defined %}
    <h1>Nincsenek postok</h1>
  {% else %}
    <div class="post-header">
      <div class="header-img">
        <img src="/files/{{post.teaser_image}}" class="" alt="">
      </div>
      <div class="post-data">
        <a href="/posts/{{post.category_name}}" class="single-post-category">{{post.category_name}}</a>
      </div>
      
      <h1 class="single-post-title">{{ post.title }}</h1>
     
    </div>

    <section class="single-post-body">
      {{ post.body|safe }}

    </section>

    <a href="/author/{{post.author_id}}" class="single-post-author">{{post.author.name}}</a>
    
    
    
  {% endif %}
{% endblock %}

{% block bodysource %} <script src="{{url_for('static', filename="submenu.js")}}"></script> {% endblock %}
