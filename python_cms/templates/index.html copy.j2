{% extends 'base.html.j2' %}
{% block title %} Nyitólap {% endblock %}
{%block headsource %}  
{# <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css"> #}
<link rel="stylesheet" href="../static/style_index.css"> 
{% endblock %}

{% block content %}
  {% if posts|length == 0 %}
  <h1 class="no-posts">Nincsenek bejegyzések</h1>
  {% endif %}

  {% for message in get_flashed_messages()  %}
   <div class="toast toast-success">
       <button class="btn btn-clear float-right"></button>
         {{message}}
   </div>
  {% endfor %}


<section class="posts">
  {% for post in posts|selectattr("promoted", "equalto", True) %}
    <div class="post promoted ">
        <div class="post-data">
            <div class="position-abs img-max">
              <a href="/post/{{ post.id }}">
                <img src="/files/{{post.teaser_image}}" alt="">
              </a>
                
            </div>
            <div class="other-data position-abs other-data-abs">
                <div class="catauth">    
                    {% if post.category_name == "Filozófia" %}
                      <div class="post-category"><a href="{{ url_for('pages.filozofia') }}">{{ post.category_name }}</a></div>
                    {% elif  post.category_name  == "Tudomány" %}
                      <div class="post-category"><a href="{{ url_for('pages.tudomany') }}">{{ post.category_name }}</a></div>
                    {% elif  post.category_name  == "Politika" %}
                      <div class="post-category"><a href="{{ url_for('pages.politika') }}">{{ post.category_name }}</a></div>
                    {% else %}
                      <div class="post-category"><a href="{{ url_for('pages.versus') }}">{{ post.category_name }}</a></div>
                    {% endif %}
                    {# <div class="post-auther margin prom-abs"><a href="#" class="font">Csámpai Elemér</a></div> #}
                </div>
                <div class="title">
                    <a class="font" href="/post/{{ post.id }}">{{post.title}}"</a>
                </div>
            </div>
        </div>
    </div>
  {% endfor %}

</section>
    {% if posts %}
    <h3>Aktuális Postok</h3>
    {% endif %}

<section class="posts">
  {% for post in posts|selectattr("promoted", "equalto", False) %}
    <div class="post">
        <div class="post-data">
            <div class="img-div">
            <a href="/post/{{ post.id }}">
              <img src="/files/{{post.teaser_image}}" alt="">
            </a>
                
            </div>
            <div class="other-data">
                <div class="catauth">
                    {% if post.category_name == "Filozófia" %}
                      <div class="post-category"><a href="{{ url_for('pages.filozofia') }}">{{ post.category_name }}</a></div>
                    {% elif  post.category_name  == "Tudomány" %}
                      <div class="post-category"><a href="{{ url_for('pages.tudomany') }}">{{ post.category_name }}</a></div>
                    {% elif  post.category_name  == "Politika" %}
                      <div class="post-category"><a href="{{ url_for('pages.politika') }}">{{ post.category_name }}</a></div>
                    {% else %}
                      <div class="post-category"><a href="{{ url_for('pages.versus') }}">{{ post.category_name }}</a></div>
                    {% endif %}
                            
                    <div class="post-auther"><a href="/author/{{post.author_id}}">{{post.author.name}}</a></div>
                </div>
                <div class="title">
                    <a href="/post/{{ post.id }}">{{post.title}}"</a>
                </div>
            </div>
        </div>
    </div>
  {% endfor %}
</section>
{% endblock %}

{% block bodysource %} <script src="{{url_for('static', filename="pic-flex.js")}}"></script> 
{% endblock %}



